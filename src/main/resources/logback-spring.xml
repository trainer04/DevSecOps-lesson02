<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- VULN: TRACE level enabled in production -->
    <property name="LOG_LEVEL" value="TRACE" />
    
    <!-- VULN: Storing logs in insecure location -->
    <property name="LOG_PATH" value="./logs" />
    
    <!-- VULN: Pattern includes sensitive data -->
    <property name="LOG_PATTERN" value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n | User: %X{username} | Session: %X{sessionId} | IP: %X{ipAddress}" />

    <!-- Console Appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <!-- File Appender -->
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <!-- VULN: File accessible to all users -->
        <file>${LOG_PATH}/application.log</file>
        <append>true</append>
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
        </encoder>
        <!-- VULN: No log rotation -->
    </appender>

    <!-- VULN: Logging all SQL queries with parameters -->
    <logger name="org.hibernate.SQL" level="DEBUG" additivity="false">
        <appender-ref ref="FILE" />
    </logger>
    
    <!-- VULN: Logging SQL parameter values -->
    <logger name="org.hibernate.type.descriptor.sql.BasicBinder" level="TRACE" additivity="false">
        <appender-ref ref="FILE" />
    </logger>

    <!-- VULN: Logging Spring Security events -->
    <logger name="org.springframework.security" level="DEBUG">
        <appender-ref ref="FILE" />
    </logger>

    <!-- Application logging -->
    <logger name="com.demo.vulnapp" level="${LOG_LEVEL}">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="FILE" />
    </logger>

    <!-- Root logger -->
    <root level="INFO">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="FILE" />
    </root>
</configuration>